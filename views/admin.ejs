<html>
    <head>
        <title>Administration</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.6.1/dist/css/uikit.min.css">
    </head>
    <body>
        <h1>Admin Page!</h1>
        <div>
            <h3>User Management</h3>
            <table class="uk-table uk-table-divider">
                <tr>
                    <th>Username</th>
                    <th>Admin</th>
                    <th>Change Role</th>
                    <th>Delete User</th>
                </tr>
                <% users.forEach((user) => { %>
                    <tr>
                        <td><%= user.username %></td>
                        <td><%= user.isadmin %></td>
                        <td><a class="uk-button-text" href="/users/changerole/<%= user.username %>">Change Role</a></td>
                        <td><a class="uk-button-text" href="/users/delete/<%= user.username %>">Delete</a></td>
                    </tr>
                <% }) %>
            </table>
        </div>
        <div>
            <h3>Blog Management</h3>
            <table class="uk-table uk-table-divider">
                <tr>
                    <th>Title</th>
                    <th>Length</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                <% posts.forEach((post) => { %>
                    <tr>
                        <td><a class="uk-button-text" href="/posts/load/<%= post._id %>"><%= post.name %></a></td>
                        <td><%= post.content.length %></td>
                        <td><a class="uk-button-text" href="/posts/edit/<%= post._id %>">Edit</a></td>
                        <td><a class="uk-button-text" href="/posts/delete/<%= post._id %>">Delete</a></td>
                    </tr>
                <% }) %>
            </table>
        </div>
        <div>
            <h3>Create Post</h3>
            <form action="/posts/create" method="POST">
                <input type="text" name="postname"><br>
                <textarea name="postcontent" rows="6" cols="60"></textarea><br>
                <input type="submit" value="Create Post">
            </form>
        </div>
        <div>
            <a class="uk-button" href="/logout">Logout</a>
        </div>
    </body>
</html>