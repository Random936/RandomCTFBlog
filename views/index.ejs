<html>
    <head>
        <title>RandomCTF</title>
        <link rel="stylesheet" href="style.css">
        <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    </head>
    <body>
        <div id="slideshowContainer">

            <div class="title-bar">
                <a href="/login">Login</a>
                <a class="isDisabled" href="/marketplace">Marketplace</a>
                <a href="/contact">Contact</a>
                <a href="/about">About</a>   
            </div>

            <div id="posts" class="post-bar">
                <h1 class="post-bar-title">Random<br>CTF</h1>
            </div>

            <div id="fullPostContainer">
            </div>

            <div class="slideshow-slide slideshow-active">
                <img src="defaultbackground.jpg">
            </div>
        
        </div>
        <script>

            function setSlide(slideIndex) {
                
                let slides = document.getElementsByClassName('slideshow-slide')

                if (slideIndex > slides.length - 1) {
                    slideIndex = 0
                } else if (slideIndex < 0) {
                    slideIndex = slides.length - 1
                }

                console.log("Switching slide to: " + slideIndex)
                for (let i = 0; i < slides.length; i++) {
                    slides[i].classList.remove('slideshow-active')
                }

                slides[slideIndex].classList.add('slideshow-active')

            }

            function loadPostContent(postid) {

                fetch('/posts/load/' + postid)
                    .then(res => res.json())
                    .then((data) => {

                        if (data.status == 'success') {
                            
                            let parent = document.getElementById('fullPostContainer')
                            parent.innerHTML = ''

                            let posttitle = document.createElement('h2')
                            posttitle.innerText = data.post.name
                            parent.appendChild(posttitle)
                            
                            console.log(data)
                            let postcontent = document.createElement('p')
                            postcontent.innerHTML = marked(data.post.content)
                            parent.appendChild(postcontent)

                            parent.style.display = "block"
                        }

                    })
                    
            }

            function createPostContainers(data) {

                if (data.status == 'success') {

                    data.posts.forEach((post, index) => {

                        // Create Post Container
                        let postparent = document.getElementById('posts')
                        let postdiv = document.createElement('div')
                        postdiv.classList.add('post-container')
                        postdiv.onmouseover = function (event) {setSlide(index + 1)}
                        postdiv.onclick = function () {
                            loadPostContent(post._id)
                        }

                        // For Post URL
                        let postlink = document.createElement('a')
                        postlink.innerText = post.name
                        postdiv.appendChild(postlink)
                        postdiv.appendChild(document.createElement('br'))

                        // For Post Content
                        let postcontent = document.createElement('p')
                        postcontent.innerText = post.content
                        postdiv.appendChild(postcontent)

                        // Append the div
                        postparent.appendChild(postdiv)

                        // Create Slide
                        let slideparent = document.getElementById('slideshowContainer')
                        let slidediv = document.createElement('div')
                        slidediv.classList.add('slideshow-slide')
                        let slideimage = document.createElement('img')
                        slideimage.src = '/uploads/' + post.image + '.jpg'
                        slidediv.appendChild(slideimage)
                        slideparent.appendChild(slidediv)
                    })

                }

            }

            function loadPosts() {
                fetch('/posts/loadall')
                    .then(res => res.json())
                    .then((data) => {
                        createPostContainers(data)                        
                    })

            }

            window.onload = function () {
                loadPosts()
                setSlide(0)
            }
        </script>
    </body>
</html>