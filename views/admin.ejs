<html>
    <head>
        <title>Administration</title>
    </head>
    <body>
        <h1>Admin Page!</h1>
        <div>
            <table>
                <tr>
                    <th>Username</th>
                    <th>Admin</th>
                    <th>Change Role</th>
                    <th>Delete User</th>
                </tr>
                <% for (let i = 0; i < users.length; i++) { %>
                    <tr>
                        <td><%= users[i].username %></td>
                        <td><%= users[i].isadmin %></td>
                        <td><a href="/users/changerole/<%= users[i].username %>">Change Role</a></td>
                        <td><a href="/users/delete/<%= users[i].username %>">Delete</a></td>
                    </tr>
                <% } %>
            </table>
        </div>
        <div>
            <h3>Create Post</h3>
            <form action="/posts/create" method="POST">
                <input type="text" name="postname"><br>
                <textarea name="postcontent" rows="6" cols="60"></textarea><br>
                <input type="submit">
            </form>
        </div>
        <div>
            <form action="/logout">
                <input type="submit" value="Logout">
            </form>
        </div>
    </body>
</html>